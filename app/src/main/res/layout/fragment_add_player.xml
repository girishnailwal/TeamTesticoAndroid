                        android:id="@+id/ivProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/app_logo"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/ivProfile"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="Profile Pictures"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_20" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rLayoutRdb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPlayerIcon"
                    android:layout_marginTop="@dimen/dp_45"
                    android:layout_toRightOf="@+id/radioGroup">

                    <ImageView
                        android:id="@+id/ivTshirt"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/player_tshirt"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/ivTshirt"
                        android:text="Change Jersey Color"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_20" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/chooseColor"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/rLayoutRdb"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/dp_100"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/drawable_rectangle_white"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_20"
                    android:text="Color"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />

            </RelativeLayout>
        </ScrollView>


        <ImageView
            android:id="@+id/ivSettingClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_60"
            android:background="@drawable/settings"
            android:visibility="gone" />


    </FrameLayout>


</layout>

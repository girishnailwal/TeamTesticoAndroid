<?xml version="1.0" encoding="utf-8"?>

                                                        

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/item_group_chat_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomMenu"
            android:layout_below="@id/topBarLayout"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llChatGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="8:00 AM"
                    android:textColor="#A3A3A3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/llChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <net.grobas.view.PolygonImageView
                        android:id="@+id/ivTeamMember"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:src="@drawable/app_logo"
                        app:poly_border="true"
                        app:poly_border_color="@android:color/transparent"
                        app:poly_border_width="5dp"
                        app:poly_corner_radius="25"
                        app:poly_rotation_angle="30"
                        app:poly_shadow="true"
                        app:poly_shadow_color="@android:color/transparent"
                        app:poly_vertices="6" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ethron"
                            android:textColor="@color/colorBlue"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="REMINDER:We have a game today at 3:00 PM"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <!--   <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="#d9d9d9" />-->

        </LinearLayout>


    </RelativeLayout>
         
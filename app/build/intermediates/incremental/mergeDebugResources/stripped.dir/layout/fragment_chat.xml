<?xml version="1.0" encoding="utf-8"?>
                                                                    
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite" android:tag="layout/fragment_chat_0" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/llTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/drawable_rectangle_blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvIndividualChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/drawable_rectangle_blue"
            android:text="Individual Chat"
            android:textColor="@color/colorRose"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvGroupChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/drawable_rectangle_blue"
            android:padding="@dimen/dp_12"
            android:layout_gravity="center"
            android:text="Group Chat"
            android:textColor="@color/colorBlue"
            android:textSize="14sp" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>

</LinearLayout>
         
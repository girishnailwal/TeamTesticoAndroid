<?xml version="1.0" encoding="utf-8"?>

                                                        

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/gallary_image_place_send_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:id="@+id/topBarLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorBlue"
            android:orientation="horizontal">

            <!-- <LinearLayout
                 android:id="@+id/llBack"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="20dp"
                 android:gravity="center">-->

            <ImageView
                android:id="@+id/ivBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/dp_15"
                android:src="@drawable/back" />
            <!--</LinearLayout>-->

            <com.teamtasticoapp.util.SFDSBTextView
                android:id="@+id/tvToWhomeChatUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Ethron"
                android:textAllCaps="true"
                android:textColor="@color/colorRose"
                android:textSize="@dimen/sp_20" />



            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/dp_15"
                android:src="@drawable/profile" />
        </LinearLayout>



        <ImageView
            android:id="@+id/ivGallary"
            android:layout_below="@+id/topBarLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/app_logo" />


        <LinearLayout
            android:id="@+id/bottomMenu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBlue"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/llSend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/ivSend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/send" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
         
<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/activity_create_team_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <!--HEADER START-->

        <LinearLayout
            android:id="@+id/topBarLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorBlue"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llAboutUs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_top_corner" />
            </LinearLayout>

            <com.teamtasticoapp.util.SFDSBTextView
                android:id="@+id/tvCreateTeam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Create Team"
                android:textAllCaps="true"
                android:textColor="@color/colorRose"
                android:textSize="@dimen/sp_20" />

            <LinearLayout
                android:id="@+id/llProfile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivBackButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/profile" />
            </LinearLayout>

        </LinearLayout>

        <!--HEADER END-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Enter your Team's name below"
                    android:textColor="#173464"
                    android:textSize="@dimen/sp_18" />


                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@drawable/drawable_white_button"
                    android:gravity="center"
                    android:hint="Team Name"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:maxLength="32"
                    android:padding="@dimen/dp_15"
                    android:textColorHint="#1D1D1D"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/drawable_blue_button"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:padding="@dimen/dp_15"
                    android:text="Next"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:id="@+id/llTermAndCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgChecked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/uncheck"
                        android:visibility="visible" />



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvAccept"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="start"
                                android:text="I accept all the "
                                android:textColor="#1D1D1D"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:id="@+id/tvTerms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/underline_string_terms"
                                android:textColor="#1D7FE8"
                                android:textSize="@dimen/sp_16" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvPrivacyPolicies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="start"
                            android:text="@string/underline_string_privacy"
                            android:textColor="#1D7FE8"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>

                   <!-- <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="Terms &amp; Conditions"
                        android:textColor="#1D1D1D"
                        android:textColorLink="#1D7FE8"
                        android:textSize="@dimen/sp_16"
                        android:visibility="visible"
                        android:clickable="true" />-->

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
         
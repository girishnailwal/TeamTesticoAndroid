<?xml version="1.0" encoding="utf-8"?>

                                                        

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical" android:tag="layout/item_individual_chat_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:id="@+id/llChatDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_above="@+id/bottomMenu"
            android:layout_below="@id/topBarLayout"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llChatSender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/llChatSen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llSender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvTimeSender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center|start"
                                android:text="11:00 AM"
                                android:textColor="#A3A3A3"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvNameSender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center|end"
                                android:text="Fabian"
                                android:textColor="@color/colorBlue"
                                android:textSize="14sp"
                                android:visibility="visible" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tvMessageSender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_gravity="center|end"
                            android:text="Please send me the address for today's game"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <net.grobas.view.PolygonImageView
                        android:id="@+id/ivTeamMemberSender"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center|end"
                        android:src="@drawable/app_logo"
                        app:poly_border="true"
                        app:poly_border_color="@android:color/transparent"
                        app:poly_border_width="5dp"
                        app:poly_corner_radius="25"
                        app:poly_rotation_angle="30"
                        app:poly_shadow="true"
                        app:poly_shadow_color="@android:color/transparent"
                        app:poly_vertices="6" />


                </LinearLayout>


                <ImageView
                    android:id="@+id/ivSender"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center|end"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:visibility="gone" />


            </LinearLayout>


            <!--   <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#d9d9d9" />-->

            <LinearLayout
                android:id="@+id/llChatReceiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/llChatRece"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <net.grobas.view.PolygonImageView
                        android:id="@+id/ivTeamMemberReceiver"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center|start"
                        android:src="@drawable/app_logo"
                        app:poly_border="true"
                        app:poly_border_color="@android:color/transparent"
                        app:poly_border_width="5dp"
                        app:poly_corner_radius="25"
                        app:poly_rotation_angle="30"
                        app:poly_shadow="true"
                        app:poly_shadow_color="@android:color/transparent"
                        app:poly_vertices="6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvNameReceiver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center|start"
                                android:text="Ethron"
                                android:textColor="@color/colorBlue"
                                android:textSize="14sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tvTimeReceiver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center|end"
                                android:text="8:00 AM"
                                android:textColor="#A3A3A3"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tvMessageReceiver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_gravity="center|start"
                            android:text="REMINDER:We have a game today at 3:00 PM"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>


                <ImageView
                    android:id="@+id/ivReceiver"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
         
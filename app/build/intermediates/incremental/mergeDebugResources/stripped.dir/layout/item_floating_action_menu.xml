<?xml version="1.0" encoding="utf-8"?>

                                                        

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/item_floating_action_menu_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:id="@+id/llTeamMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <!-- <ImageView
                 android:id="@+id/ivTeamMember"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:src="@drawable/profile_pic" />-->

            <!--  <com.teamtasticoapp.util.HexagonMaskView
                  android:id="@+id/ivTeamMember"
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  android:background="#0000"
                  android:src="@drawable/profile_pic" />-->

            <net.grobas.view.PolygonImageView
                android:id="@+id/ivUser"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/app_logo"
                app:poly_border="true"
                app:poly_border_color="@android:color/transparent"
                app:poly_border_width="5dp"
                app:poly_corner_radius="25"
                app:poly_rotation_angle="30"
                app:poly_shadow="true"
                app:poly_shadow_color="@android:color/transparent"
                app:poly_vertices="6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Jesus"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
         
<?xml version="1.0" encoding="utf-8"?>
        

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/dp_330"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/dp_5" android:tag="layout/otpdailogue_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Reset Confirmation Code"
                android:textStyle="bold"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/colorBlack" />


            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/otpforget"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_13"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/colorBlack" />

            <EditText
                android:id="@+id/edtCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/drawable_white_button"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="@dimen/dp_15"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dp_16" />

           <!-- <TextView
                android:id="@+id/tvResendOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/colorBlue"
                android:gravity="center_horizontal"
                android:text="Resend Code" />-->


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/cardview_dark_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:textColor="@color/colorRose"
                    android:gravity="center_horizontal"
                    android:text="Cancel" />


                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center_horizontal"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
         
<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/item_individual_chat_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/llChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!--  <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:src="@drawable/profile_pic" />-->

            <!--   <com.teamtasticoapp.util.HexagonMaskView
                   android:id="@+id/ivTeamMember"
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:background="#0000"
                   android:src="@drawable/profile_pic" />-->

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <net.grobas.view.PolygonImageView
                    android:id="@+id/ivChatMember"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/app_logo"
                    app:poly_border="true"
                    app:poly_border_color="@android:color/transparent"
                    app:poly_border_width="5dp"
                    app:poly_corner_radius="25"
                    app:poly_rotation_angle="30"
                    app:poly_shadow="true"
                    app:poly_shadow_color="@android:color/transparent"
                    app:poly_vertices="6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center|start"
                            android:text="Jesus"
                            android:textColor="@color/colorBlue"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|end"                            android:padding="10dp"
                            android:text="12:53 PM"
                            android:textColor="#A3A3A3"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="how are you"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp" />

                </LinearLayout>


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="#d9d9d9" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

         

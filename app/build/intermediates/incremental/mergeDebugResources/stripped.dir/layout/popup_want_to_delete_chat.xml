<?xml version="1.0" encoding="utf-8"?>

                                                        


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" android:tag="layout/popup_want_to_delete_chat_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/llCoach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/white_btn"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Please make sure"
                    android:textColor="@color/colorRose"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="you want to delete chat?"
                    android:textColor="@color/colorRose"
                    android:textSize="18dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnYes"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_blue_button"
                    android:gravity="center"
                    android:text="Yes"
                    android:layout_marginLeft="@dimen/sp_5"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/btnNo"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_blue_button"
                    android:gravity="center"
                    android:text="No"
                    android:layout_marginLeft="@dimen/sp_5"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

         
                        android:padding="@dimen/dp_15"
                        android:textColorHint="#2A2A2A"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
